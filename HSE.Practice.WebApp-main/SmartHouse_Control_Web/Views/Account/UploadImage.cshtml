<div class='col-md-3'>
	@using (Html.BeginForm
		(
		 "Edit",
			"Account",
			FormMethod.Post,
			new
				{
					enctype = "multipart/form-data"
				}))
	{
		if (Model?.Avatar != null) {
			<img src='@($"data:image/png;base64,{Convert.ToBase64String ( Model.Avatar)}")'
			     ,
			     width='256'
			     height='256' />
		}
		else {
			<img src='~/Resources/base_avatar.png'
			     height='256'
			     width='256' />
		}
					
		<fieldset>
			<div>Файл изображения</div>
			<div>
				<input type='file'
				       name='uploadImage' />
			</div>
			<p>
				<input type="submit"
				       value="Добавить"
				       name='bttn'/>
			</p>
		</fieldset>
	}
</div>
